<Page x:Class="ColorImageProcessing.ToolBar.ToolbarContainer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColorImageProcessing.ToolBar"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="ToolbarContainer">

    <Grid Height="300" VerticalAlignment="Top">
        <TabControl x:Name="TabControl_toolbar" Height="148" VerticalAlignment="Top" Margin="0,0,0,0" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="File">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Color Space Conversion" Margin="-63,0,59,-2">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Enhancement">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="View">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Page>

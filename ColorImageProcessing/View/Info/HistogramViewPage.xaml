<docking:DockItem
    xmlns:docking="http://schemas.devzest.com/presentation/docking" x:Class="ColorImageProcessing.View.Info.HistogramViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColorImageProcessing.View.Info"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="450"
      Title="HistogramViewPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="563*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="369*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFF4F4F5" Stroke="Black" Stretch="Fill" Grid.ColumnSpan="3" Margin="0,0,0,399.6" Grid.RowSpan="2" />
        <TextBlock TextWrapping="Wrap" Text="Channel" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"  />
        <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" ItemsSource= "{Binding Path= ColorChannels}"  SelectedIndex="0"/>


    </Grid>
</docking:DockItem> 
